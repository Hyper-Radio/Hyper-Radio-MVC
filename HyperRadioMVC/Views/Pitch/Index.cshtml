<link rel="stylesheet" href="~/css/trackpitch.css" asp-append-version="true" />

@model HyperRadioMVC.Models.Track

@{
ViewData["Title"] = "Pitch";
}

<div class="form">
    <h1 class="form-title"> Track Submission Portal</h1>

    <form class="form-body" asp-controller="Pitch" asp-action="SubmitForm" method="post" enctype="multipart/form-data">

        <div class="accordion" id="trackAccordion">

            <!-- SECTION 1: Basic Info -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingBasic">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseBasic" aria-expanded="true">
                        Basic Track Info
                    </button>
                </h2>
                <div id="collapseBasic" class="accordion-collapse collapse show" data-bs-parent="#trackAccordion">
                    <div class="accordion-body">

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Track Name</label>
                            <input type="text" asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Genre" class="form-label">Genre</label>
                            <select asp-for="Genre" class="form-select">
                                <option value="">Select a genre</option>
                                <option>Hip-Hop</option>
                                <option>Electronic</option>
                                <option>Pop</option>
                                <option>Rock</option>
                                <option>Jazz</option>
                                <option>Experimental</option>
                                <option>Other</option>
                            </select>
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReleaseYear" class="form-label">Release Year</label>
                            <input type="number" asp-for="ReleaseYear" class="form-control" min="1900" max="@DateTime.Now.Year" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Neighborhood" class="form-label">Neighborhood / City</label>
                            <input type="text" asp-for="Neighborhood" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">Image URL</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="TrackUrl" class="form-label">Track Upload</label>
                            <input type="file" asp-for="TrackFile" class="form-control" accept="audio/*" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- SECTION 2: Story & Inspiration -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingStory">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseStory">
                        Story & Inspiration
                    </button>
                </h2>
                <div id="collapseStory" class="accordion-collapse collapse" data-bs-parent="#trackAccordion">
                    <div class="accordion-body">

                        <div class="mb-3">
                            <label class="form-label">Tell us about this track</label>
                            <textarea asp-for="Story" class="form-control" rows="3" placeholder="Where were you? What inspired this?"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Recording or creative story</label>
                            <textarea asp-for="RecordingStory" class="form-control" rows="3" placeholder="Was there a special moment during recording?"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Optional: Voice Memo Intro (max 7 seconds)</label>
                            <input type="file" asp-for="VoiceMemo" class="form-control" accept="audio/*" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- SECTION 3: Final -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingSubmit">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSubmit">
                        Review & Submit
                    </button>
                </h2>
                <div id="collapseSubmit" class="accordion-collapse collapse" data-bs-parent="#trackAccordion">
                    <div class="accordion-body text-center">
                        <p>Make sure all your information is correct before submitting your track to Hyper Radio.</p>
                        <button type="submit" class="btn btn-primary me-2">Submit Track</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>