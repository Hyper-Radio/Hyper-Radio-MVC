<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Hyper Radio</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.svg" />
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HyperRadioMVC.styles.css" asp-append-version="true" />

    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow-x:  hidden;
            overflow-y:  visible;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: black;
            color: white;
        }

        header.masthead {
            position: fixed;
            top: 0;
            width: 100%;
            height: 120px;
            z-index: 1000;
        }

        .logo {
            height: 100px;
            width: auto;
        }

        /* Footer */
        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 80px;
            background-color: black;
        }

        /* Main content area */
        #main-content {
            flex: 1;
            margin-top: 70px; 
            margin-bottom: 80px; 
            min-height: calc(100vh - 150px);
        }

        .loading-overlay {
            display: none;
            position: fixed;
            inset: 0;
            color: white;
            z-index: 9999;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }
    </style>
</head>
<body>

<header class="masthead py-3">
    <div class="container d-flex justify-content-between align-items-center">
       
        
        <a asp-controller="Home" asp-action="Index" class="ajax-link">
        <img src="/logo.svg" alt="Hyper Radio" class="logo" />
        </a>

        <div>
            <a asp-controller="Pitch" asp-action="Index" class="btn btn-outline-light ajax-link">RADIO</a>
            <a asp-controller="Pitch" asp-action="Index" class="btn btn-outline-light ajax-link">ABOUT</a>
            <a asp-controller="Pitch" asp-action="Index" class="btn btn-outline-light ajax-link">SCHEDULE</a>
            <a asp-controller="Pitch" asp-action="Index" class="btn btn-outline-light ajax-link">PITCH</a>
        </div>
    </div>
</header>

<main id="main-content">
    @RenderBody()
</main>

<footer class="footer">
    <div>
        @Html.Partial("_AudioPlayer")
    </div>
</footer>

<div class="loading-overlay" id="loading">Loading...</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // 🔥 AJAX Page Loader
    document.addEventListener("DOMContentLoaded", function () {
        const mainContent = document.getElementById("main-content");
        const loading = document.getElementById("loading");

        // Function to load pages dynamically
        function loadPage(url, pushState = true) {
            loading.style.display = "flex";
            fetch(url, { headers: { "X-Requested-With": "XMLHttpRequest" } })
                .then(res => res.text())
                .then(html => {
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, "text/html");
                    const newContent = doc.querySelector("#main-content").innerHTML;
                    mainContent.innerHTML = newContent;
                    if (pushState) window.history.pushState({}, "", url);
                })
                .catch(err => console.error(err))
                .finally(() => loading.style.display = "none");
        }

        // Intercept AJAX link clicks
        document.body.addEventListener("click", function (e) {
            const link = e.target.closest("a.ajax-link");
            if (link) {
                e.preventDefault();
                const url = link.getAttribute("href");
                if (url) loadPage(url);
            }
        });

        // Handle back/forward navigation
        window.addEventListener("popstate", () => loadPage(window.location.pathname, false));
    });
</script>

<script src="~/js/player.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>