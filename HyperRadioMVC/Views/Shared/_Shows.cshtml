@model IEnumerable<HyperRadioMVC.Models.ShowDetails>

<!-- Include the same stylesheet used by the right-panel -->
<link rel="stylesheet" href="~/css/artistprofile.css" asp-append-version="true" />

<div class="artist-profile-container">
    <!-- Side navigation -->
    @Html.Partial("_SideNav")

    <div class="artist-shows">
        <h2 class="artist-name">Shows</h2>

        <table class="table table-striped table-bordered" style="width: 90%; margin: 2rem auto; color: white; background-color: rgba(0,0,0,0.6);">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Click to Play</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var show in Model)
            {
                <tr>
                    <td>@show.Name</td>
                    <td>@show.Description</td>
                    <td>
                        <a href="@show.URL" target="_blank" class="btn btn-primary btn-sm">Play</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>