@model HyperRadioMVC.Models.ArtistProfile

<link rel="stylesheet" href="~/css/artistprofile.css" asp-append-version="true" />

<div class="artist-profile">

    <!-- Center Image -->
    <div class="artist-image-container">
        <img src="@Model.ImageUrl" alt="@Model.Name" class="artist-image" />
    </div>

    <!-- Left Text Box (desktop only) -->
    <div class="artist-text-box d-none d-md-block">
        <h2>@Model.Name</h2>
        <p>@Model.Description</p>
    </div>

    <!-- Title (mobile or centered near bottom) -->
    <div class="artist-title d-md-none">
        <h1>@Model.Name</h1>
    </div>

</div>